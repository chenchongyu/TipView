<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-------------提示框----------"
        tools:layout_editor_absoluteX="119dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="可以设置提示框在锚点位置（上下左右）、设置颜色、标题、内容、设置宽高、设置箭头位置策略（自动居中和锚点居中）、点击事件；支持链式调用"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        android:id="@+id/textView" />


        <TextView
            android:id="@+id/v_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="left"
            android:text="我是内容。。。。\nmatch_parent布局；\n跟随锚点居中；\n点击消失；"
            android:textSize="15sp"
            app:layout_constraintRight_toLeftOf="@+id/v_btn2"
            android:layout_marginRight="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/v_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:text="默认布局（wrap_content)========；\n自动居中；"
            android:textSize="12sp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/v_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容较少"
        android:background="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_marginLeft="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="125dp"
        app:layout_constraintTop_toBottomOf="@+id/v_btn" />

    <TextView
        android:id="@+id/v_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="很多内容；\n很多内容；\n很多内容；\n很多内容；\n很多内容；\n很多内容；\n很多内容；"
        android:background="@android:color/holo_green_light"
        android:textSize="12sp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp" />
</android.support.constraint.ConstraintLayout>
